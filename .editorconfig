# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8

[*.j2]
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.sh]
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.txt]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yaml,yml}]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

